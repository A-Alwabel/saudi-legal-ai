{
  "name": "saudi-legal-ai-v2",
  "version": "2.0.0",
  "description": "Saudi Legal AI Assistant v2.0 - Clean, Secure, and Scalable",
  "main": "server/src/index.ts",
  "scripts": {
    "dev": "concurrently \"pnpm run server:dev\" \"pnpm run client:dev\"",
    "server:dev": "pnpm --filter saudi-legal-ai-server dev",
    "client:dev": "pnpm --filter saudi-legal-ai-nextjs dev",
    "build": "pnpm run server:build && pnpm run client:build",
    "server:build": "pnpm --filter saudi-legal-ai-server build",
    "client:build": "pnpm --filter saudi-legal-ai-nextjs build",
    "start": "pnpm --filter saudi-legal-ai-server start",
    "test": "pnpm run test:unit && pnpm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "db:setup": "pnpm --filter server db:setup",
    "db:seed": "pnpm --filter server db:seed",
    "db:migrate": "pnpm --filter server db:migrate",
    "clean": "rimraf node_modules client-nextjs/node_modules server/node_modules client-nextjs/dist server/dist",
    "install:all": "pnpm install",
    "prepare": "husky install"
  },
  "keywords": [
    "legal",
    "ai",
    "saudi",
    "law",
    "typescript",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Saudi Legal AI Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.6.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
